#:kivy 2.0.0
#:include topspotmap.kv
#:import GpsHelper gpshelper.GpsHelper
#:import ButtonCallback navdrawercallback.ButtonCallback

Screen:
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: "vertical"

                    MDToolbar:
                        title: "Skatespot Map"
                        right_action_items: [["magnify", lambda x: app.search_menu.open()]]
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        md_bg_color: app.theme_cls.primary_color

                    FloatLayout:
                        TopSpotMap:
                            id: mapview

                        AnchorLayout:
                            anchor_x: 'right'
                            anchor_y: 'bottom'
                            padding: dp(20), dp(30)

                            MDFloatingActionButton:
                                icon: "crosshairs-gps"
                                theme_text_color: "Custom"
                                text_color: 1, 1, 1, 1
                                md_bg_color: app.theme_cls.primary_color
                                on_release: GpsHelper.gps_button_callback()

                        AnchorLayout:
                            anchor_x: 'left'
                            anchor_y: 'bottom'
                            padding: dp(10), dp(10)

                            MDLabel:
                                id: coordinate_label
                                text: "GPS Coordinates:\nlat:\nlon:"
                                size_hint: 1, None
                                font_style: "Caption"
                                theme_text_color: "Hint"

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                orientation: 'vertical'
                padding: "8dp"
                spacing: "8dp"
                RelativeLayout:
                    id: top_box
                    size_hint_y: None
                    height: "100dp"
                    #padding: "10dp"
                    pos_hint: {"top": 1}

                    FitImage:
                        source: "lib/TopSpotGreyBig.png"

                    MDIconButton:
                        icon: "close"
                        pos_hint: {"top": 1,"right":1}
                        on_release: nav_drawer.toggle_nav_drawer()

                MDLabel:
                    text: "To add more spots send a E-Mail to:"
                    font_style: "Subtitle1"
                    size_hint_y: None
                    height: self.texture_size[1]
                MDLabel:
                    text: "greenhollows@gmail.com"
                    size_hint_y: None
                    font_style: "Caption"
                    height: self.texture_size[1]
                ScrollView:
                    do_scroll_x: False
                    always_overscroll: True
                    scroll_type: ['bars', 'content']
                    MDList:
                        id: md_list
                        height: self.minimum_height

                        OneLineIconListItem:
                            text: "Amsterdam"
                            on_release: ButtonCallback(self.text)

                            IconLeftWidget:
                                icon: "crosshairs-gps"

